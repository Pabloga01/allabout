  title Tables 
  include template.pug
    .content-wrapper.d-flex.justify-content-center
      .row#row.col-8.mt-4
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Content
          div.col-8.text-center   
            input#inputField.w-50.content(type="text", name="",value= publication ? publication._content : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Description
          div.col-8.text-center   
            textarea#inputField.w-50.description(type="text", name="")= publication ? publication._description : ''
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Latitude
          div.col-8.text-center   
            input#inputField.w-50.latitude(type="text", name="",value= publication ? publication._latitude : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Longitude
          div.col-8.text-center   
            input#inputField.w-50.longitude(type="text", name="",value= publication ? publication._longitude : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Date
          div.col-8.text-center   
            input#inputField.w-50.date(type="date", name="",value= publication ? publication._date : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 User creator
          div.col-8.text-center   
            input#inputField.w-50.id_user(type="text", name="",value= publication ? publication._id_user : '')    
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Category
          div.col-8.text-center   
            input#inputField.w-50.id_category(type="text", name="",value= publication ? publication._id_category : '')    
        div#buttonsDiv.d-flex.justify-content-center
          button#button.btnBack.btn-dark.btn Go back
          if mode== add
            button#button.buttonAdd.btn-primary.btn Add publication
          else
            button#button.buttonEdit.btn-primary.btn Edit publication


