          div.col-8.text-center   
            input#inputField.w-50.admin(type="text", name="",value= user ? user._admin : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Mail
          div.col-8.text-center   
            input#inputField.w-50.mail(type="mail", name="",value= user ? user._mail : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Password
          div.col-8.text-center   
            input#inputField.w-50.password(type="password", name="",value= user ? user._password : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Address
          div.col-8.text-center   
            input#inputField.w-50.address(type="text", name="",value= user ? user._address : '')    
        div#buttonsDiv.d-flex.justify-content-center
          button#button.btnBack.btn-dark.btn Go back
          if mode== add
            button#button.btnAdd.btn-primary.btn Add user
          else
            button#button.btnEdit.btn-primary.btn Edit user





