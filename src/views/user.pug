  title Tables 
  include template.pug
    .content-wrapper.d-flex.justify-content-center
      .row#row.col-8.mt-4
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Name
          div.col-8.text-center   
            input#inputField.w-50.name(type="text", name="", value= user ? user._name : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Surname
          div.col-8.text-center   
            input#inputField.w-50.surname(type="text", name="",value= user ? user._surname : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Nationality
          div.col-8.text-center   
            select#inputField.w-50.nationality(type="text", name= user ? user._nationality : '',value= user ? user._nationality : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
