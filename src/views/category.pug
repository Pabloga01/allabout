  title Tables 
  include template.pug
    .content-wrapper.d-flex.justify-content-center
      .row#row.col-8.mt-4
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Name
          div.col-8.text-center   
            input#inputField.name.w-50.name(type="text", name="", value= user ? user._name : '')
        div.d-flex
          div.col-4.d-flex.justify-content-center
            h4 Description
          div.col-8.text-center   
            textarea#inputField.desc.w-50.description(type="textarea", name="",value= user ? user._surname : '')
        div#buttonsDiv.d-flex.justify-content-center
          button#button.btnBack.btn-dark.btn Go back
          if mode== add
            button#button.btnAdd.btn-primary.btn Add category
          else
            button#button.btnEdit.btn-primary.btn Edit category





